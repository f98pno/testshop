{
    "extends": ["prettier", "airbnb"],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "rules": {
        "indent": ["error", 4],
        "comma-dangle": [0, "never"],
        "semi": [1, "never"],
        "quotes": [1, "single"],
        "no-unused-vars": ["warn", { "argsIgnorePattern": "next" }],
        "no-console": "off",
        "func-names": "off",
        "no-process-exit": "off",
        "object-shorthand": "off",
        "no-underscore-dangle": ["error", { "allow": ["_id"] }],
        "import/extensions": [1, "ignorePackages"]
    }
}
