{
  "extends": ["react-app", "prettier", "airbnb/base"],
  "plugins": ["prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "rules": {
    "no-nested-ternary": 0,
    "import/prefer-default-export": 0,
    "object-curly-newline": ["error", { "multiline": true }],
    "quotes": [1, "single"],
    "operator-linebreak": [1, "before"],
    "comma-dangle": [0, "never"],
    "semi": [1, "never"],
    "no-unused-vars": "warn",
    "no-console": "off",
    "func-names": "off",
    "no-process-exit": "off",
    "object-shorthand": "off",
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "prettier/prettier": [
      1,
      {},
      {
        "usePrettierrc": true,
        "singleQuote": true
      }
    ]
  }
}
